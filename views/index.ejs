
    <% layout('layouts/boilerplate') %>
    <h1>Travel Home Page</h1>
    <ul>
      <% for(let i = 0; i < travel.length; i++) { %>

          <div class="card" mb-3>
            <div class="row">
              <div class="col-md-4">
                  <img class="img-fluid" alt="" src="<%=travel[i].img%>"> </br>
              </div>
              <div class="col-mg-8">
                <div class="card-body">
                    <a class="btn btn-primary" href="/travel/<%=travel[i]._id%>">
                      <%=travel[i].name%></a>

                </div>
              </div>
            </div>
          </div>

      <% } %>
    </ul>
